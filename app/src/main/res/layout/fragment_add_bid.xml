        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_margin="15dp"
            android:layout_weight=".75"
            android:orientation="vertical">

            <com.ezyscrap.fonts.RegularTextView
                android:id="@+id/txtHdminAmnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Minimum Amount Per kg For Bid"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp">

                <com.ezyscrap.fonts.RegularEditTextNumber
                    android:id="@+id/edtMinAmnt"
                    android:hint="Enter Amount"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:background="@android:color/transparent"
                    android:digits="0123456789"
                    android:gravity="center"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:textColor="@color/text_colour_grey"
                    android:textSize="15sp" />
            </android.support.v7.widget.CardView>

            <com.ezyscrap.fonts.RegularTextView
                android:id="@+id/tvHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Total Bid Amount(Including GST)"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <com.ezyscrap.fonts.RegularTextViewNumber
                android:id="@+id/tvTotalAmnt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/bkg_green"
                android:gravity="center"
                android:padding="10dp"
                android:text="0.00"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>

        <com.ezyscrap.fonts.BoldTextView
            android:id="@+id/tvPlaceBid"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight=".1"
            android:background="@drawable/rounded_btn_green"
            android:gravity="center"
            android:padding="10dp"
            android:text="PLACE BID"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>
</FrameLayout>
