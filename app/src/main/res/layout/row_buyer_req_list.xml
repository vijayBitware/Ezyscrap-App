<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/linearDetails"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight=".75"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <com.ezyscrap.fonts.RegularTextView
                    android:id="@+id/txtOrderNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#ORD1234"
                    android:textColor="@color/colorPrimary"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <com.ezyscrap.fonts.RegularTextView
                    android:id="@+id/txtScrapType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Hotel Scrap"
                    android:textColor="@color/text_colour_grey"
                    android:textSize="15sp" />

                <com.ezyscrap.fonts.RegularTextView
                    android:id="@+id/txtUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Hotel Scrap"
                    android:textColor="@color/text_colour_grey"
                    android:textSize="15sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight=".25">

                <ImageView
                    android:id="@+id/imgAddBid"
                    android:layout_width="wrap_content"
                    android:layout_height="49dip"
                    android:layout_centerInParent="true"
                    android:layout_weight=".2"
                    android:src="@drawable/icon_bid"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imgAddInterest"
                    android:layout_width="wrap_content"
                    android:layout_height="49dip"
                    android:layout_centerInParent="true"
                    android:layout_weight=".2"
                    android:visibility="gone"
                    android:src="@drawable/icon_interest" />

                <LinearLayout
                    android:id="@+id/linearBidAdded"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight=".2"
                    android:orientation="vertical">

                   <!-- <ImageView

                        android:id="@+id/imgBidSuccessful"
                        android:layout_width="wrap_content"
                        android:layout_height="39dip"
                        android:src="@drawable/icon_buyer_success" />-->
                    <com.ezyscrap.fonts.BoldTextView
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bid"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp" />
                    <com.ezyscrap.fonts.BoldTextView
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Successful"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp" />
                </LinearLayout>

                <com.ezyscrap.fonts.BoldTextView
                    android:id="@+id/txtSold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Sold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>