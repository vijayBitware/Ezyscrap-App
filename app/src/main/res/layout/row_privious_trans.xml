<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="10"
            android:id="@+id/ll_row">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"/>

            <ImageView
                android:id="@+id/img_complaint_icon"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="1.5"
                android:scaleType="fitXY"
                android:src="@drawable/icon_order_history" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:layout_weight="7.2"
                android:orientation="vertical"
                android:weightSum="10">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <com.ezyscrap.fonts.RegularTextView
                        android:id="@+id/txt_complaint_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Paid For Orders"
                        android:textSize="15sp"
                        android:singleLine="true"
                        android:textColor="@color/black"/>
                    <com.ezyscrap.fonts.BoldTextViewNumber
                        android:id="@+id/txt_paymentAmt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_weight="0.5"
                        android:gravity="end"
                        android:text="â‚¹2000.00"
                        android:textColor="@color/black"
                        android:textSize="10dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp">
                    <com.ezyscrap.fonts.RegularTextView
                        android:id="@+id/txt_orderId"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:paddingRight="5dp"
                        android:text="Order #ORD12345"
                        android:textSize="12sp"
                        android:gravity="center|left"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp">
                    <com.ezyscrap.fonts.RegularTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:paddingRight="5dp"
                        android:text="December 17 10:20 AM"
                        android:textSize="12sp"
                        android:gravity="center|left"
                        android:id="@+id/txt_paymentDate"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>