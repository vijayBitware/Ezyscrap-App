<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:clickable="true"
    android:foreground="@drawable/cover_selector"
    android:gravity="center"
    android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="310dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:cardElevation="4dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/blue"
            android:layout_margin="3dp">

            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/blue"
                android:orientation="vertical"
                android:layout_margin="3dp">

                <com.ezyscrap.fonts.BoldTextView
                    android:id="@+id/txtOrderNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ORD12345"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <com.ezyscrap.fonts.RegularTextView
                    android:id="@+id/txtScrapType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Industrial Waste"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <com.ezyscrap.fonts.RegularTextView
                    android:id="@+id/txtScrapQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1000kg"
                    android:textColor="@color/white"
                    android:textSize="10sp" />


                <com.ezyscrap.fonts.RegularTextView
                    android:id="@+id/txtDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="20/12/2017"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceSmallInverse"
        android:textColor="@color/black"
        android:visibility="gone"
        tools:text="Title" />
</LinearLayout>